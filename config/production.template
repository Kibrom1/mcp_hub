# Production Environment Variables Template
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=production

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Security Keys (Generate secure random keys)
SECRET_KEY=your_32_character_secret_key_here
JWT_SECRET=your_32_character_jwt_secret_here

# Database Configuration
DATABASE_URL=postgresql://postgres:secure_password@localhost:5432/mcp_hub

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here
USER_USERNAME=user
USER_PASSWORD=your_secure_user_password_here

# Security Settings
SESSION_TIMEOUT=3600
MAX_REQUESTS_PER_MINUTE=60
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300
PASSWORD_MIN_LENGTH=8
ENABLE_2FA=false

# Server Configuration
HOST=0.0.0.0
PORT=8501
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=mcp_hub.log

# CORS and Security
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/mcp_hub.crt
SSL_KEY_PATH=/etc/ssl/private/mcp_hub.key

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090
